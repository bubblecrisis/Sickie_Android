<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/standard_margin"
    android:id="@+id/appointment_item_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
    android:id="@+id/appointment_hour"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
    tools:text="10am"
    android:padding="@dimen/activity_horizontal_margin"
    />

    <TextView
        android:id="@+id/appointment_availability"
        android:layout_toRightOf="@+id/appointment_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        tools:text="Unavailable"
        android:textColor="@color/md_red_700"
        android:padding="@dimen/activity_horizontal_margin"
        />

    <android.support.v7.widget.AppCompatCheckBox
        android:layout_alignParentRight="true"
        android:id="@+id/appointment_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/underline"
        />
</RelativeLayout>