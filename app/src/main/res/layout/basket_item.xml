<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="@dimen/standard_margin"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
        android:id="@+id/basket_item_image"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        />

    <TextView
        android:id="@+id/basket_item_name"
        android:layout_toRightOf="@+id/basket_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        tools:text="Panadol"
        />

    <TextView
        android:id="@+id/basket_item_description"
        android:layout_below="@+id/basket_item_name"
        android:layout_toRightOf="@+id/basket_item_image"
        tools:text="Pain relief"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/basket_item_quantity"
        android:layout_toLeftOf="@+id/basket_item_price"
        tools:text="1"
        android:layout_marginRight="@dimen/standard_margin"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/basket_item_price"
        android:layout_toLeftOf="@+id/basket_checkbox"

        tools:text="$10.00"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/basket_checkbox"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>